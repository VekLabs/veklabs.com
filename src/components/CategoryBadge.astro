---
import type { Type } from '@/payload-types'

type Props = Type & {
  class?: string
}

const { id, ...props } = Astro.props
---

<span
  transition:name={`category-${id}`}
  class:list={[
    'absolute left-4 top-4 z-10 rounded-sm bg-teal-400/20 px-2 py-1 text-xs font-medium uppercase text-foreground backdrop-blur-md backdrop-contrast-75 backdrop-saturate-0',
    { 'bg-rose-400/20': props.slug === 'vekcast' },
    { 'bg-blue-400/20': props.slug === 'reports' },
    { 'bg-green-400/20': props.slug === 'film' },
    { 'bg-yellow-400/20': props.slug === 'calgary' },
    props.slug,
  ]}>{props.title}</span
>
