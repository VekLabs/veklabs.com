---
type Props = {
  category: string
  id?: string
  class?: string
}

const { category, id, ...props } = Astro.props
---

<span
  transition:name={`category-${category}-${id}`}
  class:list={[
    "absolute left-4 top-4 z-10 rounded bg-teal-400/20 px-2 py-1 text-xs font-medium uppercase text-foreground backdrop-blur-md backdrop-contrast-75 backdrop-saturate-0",
    { "bg-rose-400/20": category.toLowerCase() === "vekcast" },
    { "bg-blue-400/20": category.toLowerCase() === "reports" },
    { "bg-green-400/20": category.toLowerCase() === "film" },
    { "bg-yellow-400/20": category.toLowerCase() === "calgary" },
    props.class,
  ]}>{category}</span
>
