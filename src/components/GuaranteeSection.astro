---
import type { HomePage } from '@/payload-types'
import type { Populated } from '@/utils/typeChecks'
import Image from './Image.tsx'

type Props = { home: Populated<HomePage> }
const { home } = Astro.props
---

<section class="w-container mx-auto my-16">
  <div class="mx-auto grid w-full max-w-7xl grid-cols-1 gap-4 lg:grid-cols-3">
    <div class="col-span-1 h-full min-h-125 bg-black lg:col-span-2 lg:min-h-75">
      <div class="relative h-full rounded-lg border border-white/10 p-2 md:p-3">
        <div class="relative z-20 h-full px-4 py-20 sm:px-10">
          <div class="flex flex-col gap-6">
            <h1 class="text-3xl font-extrabold lg:text-4xl">
              {home.awards_title}
            </h1>
            <div class="z-10 flex w-full flex-wrap-balance gap-8">
              {
                home.awards?.map((awardImage) => (
                  <Image
                    media={awardImage}
                    width={128}
                    alt={''}
                    className="w-5/12 max-w-32 shrink"
                  />
                ))
              }
            </div>
          </div>
        </div>
      </div>
    </div>

    <section class="col-span-1 min-h-75 bg-black">
      <div class="relative h-full rounded-lg border border-white/10 p-2 md:p-3">
        <div class="relative z-20 h-full px-4 py-20 sm:px-10">
          <div class="flex flex-col gap-6">
            <h1 class="text-3xl font-extrabold lg:text-4xl">
              {home.guarantee_title}
            </h1>
            <p class="text-xl">{home.guarantee}</p>
          </div>
        </div>
      </div>
    </section>

    <section
      class="col-span-1 min-h-125 bg-black lg:col-span-3 lg:min-h-150 xl:min-h-75"
    >
      <div class="relative h-full rounded-lg border border-white/10 p-2 md:p-3">
        <div class="relative z-20 h-full px-4 py-20 sm:px-10">
          <div class="flex flex-col gap-4">
            <h1
              class="max-w-prose text-3xl font-extrabold text-pretty lg:text-4xl"
            >
              {home.trust_title}
            </h1>
            <h2 class="text-xl font-bold text-pretty text-gray-400 italic">
              {home.trust_subtitle}
            </h2>
            <p class="max-w-prose text-pretty">{home.trust_description}</p>
          </div>
        </div>
      </div>
    </section>
  </div>
</section>
