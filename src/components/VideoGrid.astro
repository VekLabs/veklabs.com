---
import { getCollection } from "astro:content"
import { take } from "lodash-es"
import VideoCard from "./VideoCard.tsx"
import { Image } from "astro:assets"

const videos = await getCollection("videos")
---

<section
  class="xs:grid-cols-[repeat(auto-fit,_minmax(400px,1fr))] mx-auto grid w-container grid-cols-2 gap-2 sm:gap-5 lg:grid-cols-3"
>
  {
    take(videos, 6).map(async (video) => (
      <VideoCard {...video.data} client:idle>
        <Image src={video.data.image} alt="" />
      </VideoCard>
    ))
  }

