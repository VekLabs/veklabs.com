---
type Props = {
  title: string
  description: string
  link: {
    href: string
    text: string
  }
}

const { title, description, link } = Astro.props
---

<div class="grid grid-flow-col justify-start gap-5">
  <div
    class="mb-auto inline-flex w-max items-center justify-center rounded-lg p-3 ring-1 ring-foreground/40"
  >
    <slot />
  </div>

  <div class="-mt-1 flex flex-col gap-2">
    <span class="text-xl font-medium">{title}</span>
    <p class="text-gray-400">{description}</p>
    <a href={link.href}>
      {link.text}
    </a>
  </div>
</div>
