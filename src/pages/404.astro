---
import Footer from '@/components/Footer.astro'
import Header from '@/components/Header'
import image from '@/images/production.jpg'
import { Font, Image } from 'astro:assets'
import { PhArrowLeft, PhCaretRight } from 'phosphor-icons-astro'
import '../styles/global.css'
---

<html
  lang="en"
  class:list={[
    'font-[--font-montserrat]',
    'bg-background text-foreground no-scrollbar min-h-full font-sans font-normal',
  ]}
>
  <head>
    <Font cssVariable="--font-montserrat" preload />
    <slot name="head" />
  </head>

  <body class="no-scrollbar size-full">
    <Header currentPath={Astro.url.pathname} client:load />
    <main class="size-full">
      <section class="h-full grow">
        <div
          class="container mx-auto h-[calc(100vh-10rem)] px-6 py-12 lg:flex lg:items-center lg:gap-12"
        >
          <div class="w-full lg:w-1/2">
            <p class="text-sm font-medium text-blue-500 dark:text-blue-400">
              404
            </p>
            <h1 class="mt-3 text-2xl font-semibold md:text-3xl dark:text-white">
              We lost this page
            </h1>
            <p class="mt-4 text-gray-500 dark:text-gray-400">
              Sorry, the page you are looking for doesn't exist.
            </p>
            <div class="mt-6 flex items-center gap-x-3">
              <a
                href="javascript:history.back()"
                class="text-foreground hover:text-foreground flex w-max translate-x-0 items-center gap-1 rounded-full bg-black/50 px-4 py-2 text-sm opacity-100 backdrop-blur-md transition-all delay-300 duration-300 hover:bg-black hover:ring-1 hover:ring-white/20"
              >
                <PhArrowLeft size={16} />
                <span>Go back</span>
              </a>
              <a
                href="/"
                class="shadow-accent-600 ring-accent-500 hover:bg-accent-400/15 rounded-md px-4 py-2 text-sm shadow-xs ring-1 duration-200"
              >
                Take me home
              </a>
            </div>
            <div class="mt-10 space-y-6">
              <div>
                <a
                  href="/contact"
                  class="a mt-1 flex items-center gap-1.5 text-lg"
                >
                  <span>Contact Us</span>
                  <PhCaretRight />
                </a>
                <p class="mt-2 text-sm text-gray-500 dark:text-gray-400">
                  Get in touch with us to discuss your next project.
                </p>
              </div>
              <div>
                <a
                  href="/reports"
                  class="a mt-1 flex items-center gap-1.5 text-lg"
                >
                  <span>Reports</span>
                  <PhCaretRight />
                </a>
                <p class="mt-2 text-sm text-gray-500 dark:text-gray-400">
                  Read the latest posts on our blog.
                </p>
              </div>
              <div>
                <a
                  href="/portfolio"
                  class="a mt-1 flex items-center gap-1.5 text-lg"
                >
                  <span>Portfolio</span>
                  <PhCaretRight />
                </a>
                <p class="mt-2 text-sm text-gray-500 dark:text-gray-400">
                  Check out some of our latest work.
                </p>
              </div>
            </div>
          </div>
          <div class="relative mt-8 w-full lg:mt-0 lg:w-1/2">
            <Image
              alt=""
              class="h-80 w-full rounded-lg object-cover md:h-96 lg:h-128"
              src={image}
              width={720}
            />
          </div>
        </div>
      </section>
    </main>
    <Footer />
  </body>
</html>
