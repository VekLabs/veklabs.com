---
import { getCollection } from "astro:content"
import ServiceSummary from "../../components/ServiceSummary.astro"
import DefaultLayout from "../../layouts/DefaultLayout.astro"
import PageTitle from "../../components/PageTitle.astro"

const services = (await getCollection("services")).sort(
  (a, b) => b.data.order - a.data.order,
)
---

<DefaultLayout>
  <section class="overflow-y-hidden">
    <div class="container mx-auto max-w-[980px] px-6 pt-20 lg:px-12">
      <div>
        <PageTitle>Services</PageTitle>

        {
          services.map((service, i) => (
            <ServiceSummary i={i} {...service.data} {...service} />
          ))
        }
      </div>
    </div>
  </section>
</DefaultLayout>
