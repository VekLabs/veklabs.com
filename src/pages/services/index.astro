---
import { getCollection } from "astro:content"
import ServiceSummary from "../../components/ServiceSummary.astro"
import DefaultLayout from "../../layouts/DefaultLayout.astro"

const services = (await getCollection("services")).sort(
  (a, b) => b.data.order - a.data.order,
)
---

<DefaultLayout>
  <section class="overflow-y-hidden">
    <div class="container mx-auto max-w-[980px] px-6 lg:px-12">
      <div>
        <h1 class="m-0 py-12 text-5xl font-semibold">Services [In-House]</h1>

        {
          services.map((service, i) => (
            <ServiceSummary i={i} {...service.data} {...service} />
          ))
        }

        <!-- <div class="inventory">

        <h1 class="title">Equipment Arsenal</h1>

        {{.Content}}
      </div> -->
      </div>
    </div>
  </section>
</DefaultLayout>
